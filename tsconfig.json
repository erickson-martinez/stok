{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",               // ok, mas veja abaixo
    "types": ["node"],
    "sourceMap": true,
    "incremental": true,

    // Sugestões úteis:
    "noImplicitAny": true,         // já vem com strict, mas reforça
    "noUnusedLocals": true,        // avisa variáveis não usadas
    "noUnusedParameters": true,    // avisa params não usados
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,  // ajuda com imports default
    "resolveJsonModule": true,     // permite import json como módulo
    "baseUrl": ".",                // permite imports absolutos (ex: import { x } from "src/utils")
    "paths": {                     // exemplo de alias (opcional)
      "@/*": ["src/*"]
    }
  },
  "include": [
    "backend/**/*",                // ok
    "src/**/*"                     // se quiser padronizar pasta src
  ],
  "exclude": ["node_modules", "dist"]
}