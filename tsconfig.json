{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "sourceMap": true,               // opcional: ajuda no debug se precisar
    "incremental": true              // opcional: builds mais r√°pidos depois do primeiro
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules", "dist"]
}